page {
  background-color: #fff;
  background-image: none;
  color: #333;
}
.bottom_content {
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 112rpx;
  border-top: 2rpx solid #e5e5e5;
  background-color: #fff;
  box-sizing: border-box;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.bottom_content .blue {
    width: 120rpx;
    height: 73rpx;
    font-size: 32rpx;
    line-height: 73rpx;
    padding: 0;
    margin-left: 24rpx;
}
.messageInput {
  width: 561rpx;
  height: 73rpx;
  background-color: #e5e5e5;
  border-radius: 20rpx;
  border: none;
  color: #333;
  line-height: 73rpx;
  padding: 0 10rpx;
  box-sizing: border-box;
}
.acceptImage, .sendImage {
  width: 114.5rpx;
  height: 114.5rpx;
  border-radius: 50%;
  border: solid 3rpx #b5b5b5;
  position: relative;
}
.acceptImage uni-image, .sendImage uni-image {
    width: 100%;
    height: 100%;
}
.acceptMessage {
  width: 496rpx;
  background-color: #ffffff;
  border-radius: 7rpx;
  border: solid 3rpx #b5b5b5;
  margin-left: 47rpx;
  padding: 30rpx;
  box-sizing: border-box;
  word-break: break-word;
}
.sendMessage {
  width: 496rpx;
  background-color: #1d94df;
  border-radius: 7rpx;
  border: solid 3rpx #b5b5b5;
  color: #fff;
  margin-right: 47rpx;
  padding: 30rpx;
  box-sizing: border-box;
  word-break: break-word;
}
.scroll_view {
  padding: 0 40rpx;
  box-sizing: border-box;
  height: 100%;
  padding-bottom: 130rpx;
}
.messageContent {
  margin-top: 50rpx;
}

