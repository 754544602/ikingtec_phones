  text-align: center;
}
.liveView {
  position: absolute;
  bottom: 136rpx;
  width: 100%;
  height: 375rpx;
  padding: 0 40rpx;
  box-sizing: border-box;
  left: 0;
}
.liveView .livePlayerView {
    border: 6rpx solid #1d94df;
